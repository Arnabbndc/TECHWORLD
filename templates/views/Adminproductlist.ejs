<style>
    .card1 {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    max-width: 80vw;
    height: 20vh;
    margin-left: 9vw;
    margin-bottom: 2vh;
    text-align: left;
    font-family: arial;
    font-size: 1.5rem;
    overflow: hidden;
    border-radius: 2vw;
    }
    
    .img {
    float: left;
    max-width: 20vw;
    max-height: 20vh;
    }
    
    .txt {
    float: left;
    max-width: 60vw;
    max-height: 20vh;
    padding-left: 2vw;
    padding-top: 7vh;
    font-size: 1rem;
    }
    .bttn{
     float:right;
     margin-top:14vh;
     margin-right: 1vw;
     width: 13vw;
     height: 5vh;
     border: none;
     background: linear-gradient(to bottom right, #B8D7FF, #8EB7EB);
     border-radius: 2vw;
     cursor: pointer;
     font-size: 1rem;
     font-family: �Open Sans�;
    }
    .btn:hover {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    }
    .add-bttn{
     text-align: center;
     margin-left: 9vw;
    margin-bottom: 2vh;
     width: 80vw;
     height: 24vh;
     border: none;
     border-radius: 2vw;
     cursor: pointer;
     font-family: �Open Sans�;
    }
    .pls{font-size:4rem;}
    .add-bttn:hover {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    }
    
    .add-bttn:active {
      background: linear-gradient(to bottom right, #B8D7FF, #8EB7EB);
    }
    </style>
    
    <body>
        <div><button class="add-bttn" data-bs-toggle="modal" data-bs-target="#myModal"><div class="pls">+</div> ADD PRODUCT</button></div>
        <% for (let product of products){ %>
        <div class="card1">
            <img class="img" src="<%= product.IMAGE %>">
            <div class="txt"><%= product.PRODUCT_NAME %></div>
            <button class="bttn">REMOVE</button>
            <button class="bttn">UPDATE</button>
        </div>
        <% } %>
        <p id="demo"></p>
        
    




