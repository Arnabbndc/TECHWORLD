<style>
    .brand-info-svk{
        max-width:80vw;
        padding-left: 15vw; 
    }
    
    .card1 {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    max-width: 80vw;
    height: 20vh;
    margin-left: 9vw;
    margin-bottom: 2vh;
    text-align: left;
    font-family: arial;
    font-size: 1.5rem;
    overflow: hidden;
    border-radius: 2vw;
    }
    
    .img {
    float: left;
    max-width: 20vw;
    max-height: 20vh;
    }
    
    .txt {
    float: left;
    max-width: 60vw;
    max-height: 20vh;
    padding-left: 2vw;
    padding-top: 7vh;
    font-size: 1rem;
    }
    .bttn{
     float:right;
     margin-top:14vh;
     margin-right: 1vw;
     width: 13vw;
     height: 5vh;
     border: none;
     background: linear-gradient(to bottom right, #B8D7FF, #8EB7EB);
     border-radius: 2vw;
     cursor: pointer;
     font-size: 1rem;
     font-family: �Open Sans�;
    }
    .bttn:hover {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    }
</style>

<div class="brand-info-svk">
<img src="<%= brand.LOGO %>" class="img-fluid" alt="Responsive image">


<h3>
    Number of total products: <small class="text-muted"><%= brand.TOTAL_PRODUCTS %></small>
</h3>
</div>

        
<% for (let product of brandProducts){ %>
    <a class="listed" href=<%="/product/" + product.PRODUCTID %> >
    <div class="card1">
        <img class="img" src="<%= product.IMAGE %>">
        <div class="txt"><%= product.PRODUCT_NAME %></div>

        <% if(product.TYPE=="SSD" ) { %>
            <a href=<%="/admin/product/setcompatibility/" + product.PRODUCTID %> ><button class="bttn">SET
                    COMPATIBILITY</button></a>
            <% } %>
        <% if(product.TYPE=="PROCESSOR" ) { %>
            <a href=<%="/admin/product/setcompatibility/" + product.PRODUCTID %> ><button class="bttn">SET
                    COMPATIBILITY</button></a>
            <% } %>
        <% if(product.TYPE=="GRAPHICS_CARD" ) { %>
            <a href=<%="/admin/product/setcompatibility/" + product.PRODUCTID %> ><button class="bttn">SET
                    COMPATIBILITY</button></a>
            <% } %>
        <% if(product.TYPE=="HDD" ) { %>
            <a href=<%="/admin/product/setcompatibility/" + product.PRODUCTID %> ><button class="bttn">SET
                    COMPATIBILITY</button></a>
            <% } %>
        <% if(product.TYPE=="RAM" ) { %>
            <a href=<%="/admin/product/setcompatibility/" + product.PRODUCTID %> ><button class="bttn">SET
                    COMPATIBILITY</button></a>
            <% } %>
        <% if(product.TYPE=="POWER_SUPPLY" ) { %>
            <a href=<%="/admin/product/setcompatibility/" + product.PRODUCTID %> ><button class="bttn">SET
                    COMPATIBILITY</button></a>
            <% } %>

        <a href=<%="/admin/product/updateproduct/" + product.PRODUCTID %> ><button class="bttn">UPDATE</button></a>
    </div></a>
<% } %>