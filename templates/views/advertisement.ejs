<style>
    .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    max-width: 80vw;
    height: 50vh;
    margin-bottom: 2vh;
    margin-left: 9vw;
    text-align: left;
    font-family: arial;
    font-size: 1.5rem;
    overflow: hidden;
    border-radius: 2vw;
    }
    
    .img {
    float: left;
    width: 80vw;
    max-height: 35vh;
    }
    
    .txt {
    float: left;
    margin-top:1vh;
    max-width: 50vw;
    max-height: 20vh;
    padding-left: 2vw;
    font-size: 1rem;
    }
    .btn{
     float:right;
     margin-top:8vh;
     margin-right: 1vw;
     width: 13vw;
     height: 5vh;
     border: none;
     background: linear-gradient(to bottom right, #B8D7FF, #8EB7EB);
     border-radius: 2vw;
     cursor: pointer;
     font-size: 1rem;
     font-family: �Open Sans�;
    }
    .btn:hover {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    }
    .add-btn{
     text-align: center;
     margin-bottom: 2vh;
     margin-left: 9vw;
     width: 80vw;
     height: 24vh;
     border: none;
     border-radius: 2vw;
     cursor: pointer;
     font-family: �Open Sans�;
    }
    .plus{font-size:6rem;}
    .add-btn:hover {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    }
    
    .add-btn:active {
      background: linear-gradient(to bottom right, #B8D7FF, #8EB7EB);
    }
    </style>
    
    <body>
        <div><button class="add-btn"><div class="plus">+</div> ADD ADVERTISE</button></div>
    <% for (let ad of ads){ %>    
        <div class="card">
            <img class="img" src="<%= ad.IMAGE %>">
            <div class="txt"><%= ad.DETAILS %></div>
            <button class="btn">REMOVE</button>
            <button class="btn">UPDATE</button>
        </div>
    <% } %>
    </body>