<style>
    body{
    margin-top:20px;
    color: #1a202c;
    text-align: left;
    background-color: #e2e8f0;    
}
.main-body {
    padding: 15px;
}
.card {
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
}

.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid rgba(0,0,0,.125);
    border-radius: .25rem;
}

.card-body {
    flex: 1 1 auto;
    min-height: 1px;
    padding: 1rem;
}

.gutters-sm {
    margin-right: -8px;
    margin-left: -8px;
}

.gutters-sm>.col, .gutters-sm>[class*=col-] {
    padding-right: 8px;
    padding-left: 8px;
}
.mb-3, .my-3 {
    margin-bottom: 1rem!important;
}

.bg-gray-300 {
    background-color: #e2e8f0;
}
.h-100 {
    height: 100%!important;
}
.shadow-none {
    box-shadow: none!important;
}
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

<style>
    .card-svk {
  width: 22vw;
}
.svk-1{
    height:60vh;
    margin-bottom: 4vh;
}
.order-history{
  display: none;
}

.previously-selected{
  display: none;
}
</style>




<div class="container">
    <div class="main-body">
    
          <!-- Breadcrumb -->
          <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/login">Home</a></li>
              <li class="breadcrumb-item">User Profile</li>
            </ol>
          </nav>
          <!-- /Breadcrumb -->
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4><%= userInfo.NAME %></h4>
                      <p class="text-secondary mb-1"><%= userInfo.EMAIL %></p>
                      <p class="text-muted font-size-sm"><%= userInfo.ADDRESS %></p>
                    </div>
                    <button class="btn btn-outline-primary" onclick="OpenOrderHistory()">Order History</button>
                    <br>
                    <button class="btn btn-outline-primary" onclick="OpenPreviouslySelected()">Previously selected products</button>
                  </div>
                </div>
              </div>
              
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <%= userInfo.NAME %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <%= userInfo.EMAIL %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      USER PHONE
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Mobile</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      USER MOBILE
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <%= userInfo.ADDRESS %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info " target="__blank" href="/user/update">Edit Profile</a>
                    </div>
                  </div>
                </div>
              </div>

            <div class="mt-3 order-history" id="order-history">
                      <h4>ORDER HISTORY :</h4>
              <div class="row gutters-sm" >
                  
        
                <% for (let product of cart){ %>
                <div class="card-svk">
        <div class="card p-3 bg-white svk-1" ><i class="fa fa-apple"></i>
            <div class="about-product text-center mt-2"><img src="<%=product.IMAGE%>" width="280">
                <div>
                    <h6 class="mt-0 text-black-50"><%=product.PRODUCT_NAME%></h6>
                </div>
            </div>
            <div class="stats mt-2">
                <div class="d-flex justify-content-between p-price"><span>Purchase date</span><span>DATE</span></div>
                <div class="d-flex justify-content-between p-price"><span>Price</span><span><%=product.PRICE%></span></div>
                <div class="d-flex justify-content-between p-price"><span>Quantity</span><span><%=product.QUANTITY%></span></div>
            </div>
            <div class="d-flex justify-content-between total font-weight-bold mt-4"><span>Total</span><span>$7,1998.00</span></div>
            </div>
        </div>
        
        <% } %>
        
        </div>
        
        
        
        </div>



        <div class="mt-3 order-history" id="order-history">
                      <h4>ORDER HISTORY :</h4>
              <div class="row gutters-sm" >
                  
        
                <% for (let product of cart){ %>
                <div class="card-svk">
        <div class="card p-3 bg-white svk-1" ><i class="fa fa-apple"></i>
            <div class="about-product text-center mt-2"><img src="<%=product.IMAGE%>" width="250">
                <div>
                    <h6 class="mt-0 text-black-50"><%=product.PRODUCT_NAME%></h6>
                </div>
            </div>
            <div class="stats mt-2">
                <div class="d-flex justify-content-between p-price"><span>Purchase date</span><span>DATE</span></div>
                <div class="d-flex justify-content-between p-price"><span>Price</span><span><%=product.PRICE%></span></div>
                <div class="d-flex justify-content-between p-price"><span>Quantity</span><span><%=product.QUANTITY%></span></div>
            </div>
            <div class="d-flex justify-content-between total font-weight-bold mt-4"><span>Total</span><span>$7,1998.00</span></div>
            </div>
        </div>        
        <% } %>        
        </div>      
        </div>


              <div class="mt-3 previously-selected" id="previously-selected">
                <h4>PREVIOUSLY SELECTED PRODUCTS:</h4>
        <div class="row gutters-sm" >
            

          <% for (let product of cart){ %>
          <div class="card-svk">
      <div class="card p-3 bg-white svk-1" ><i class="fa fa-apple"></i>
      <div class="about-product text-center mt-2"><img src="<%=product.IMAGE%>" width="250">
          <div>
              <h6 class="mt-0 text-black-50"><%=product.PRODUCT_NAME%></h6>
          </div>
      </div>
      <div class="stats mt-2">
          <div class="d-flex justify-content-between p-price"><span>Purchase date</span><span>DATE</span></div>
          <div class="d-flex justify-content-between p-price"><span>Price</span><span><%=product.PRICE%></span></div>
          <div class="d-flex justify-content-between p-price"><span>Quantity</span><span><%=product.QUANTITY%></span></div>
      </div>
      <div class="d-flex justify-content-between total font-weight-bold mt-4"><span>Total</span><span>$7,1998.00</span></div>
      </div>
      </div>        
      <% } %>        
      </div>      
      </div>



            </div>
          </div>

        </div>
    </div>

    <script>
      var a = 0;

      function OpenOrderHistory() {
        if (a == 1) {
          document.getElementById("order-history").style.display = "none";
          return a = 0;
        } else if (a == 0) {
          document.getElementById("order-history").style.display = "block";
          return a = 1;
        }
        else if (a == 2) {
          document.getElementById("previously-selected").style.display = "none";
          document.getElementById("order-history").style.display = "block";
          return a = 1;
        }
      }

      function OpenPreviouslySelected() {
        if (a == 2) {
          document.getElementById("previously-selected").style.display = "none";
          return a = 0;
        } else if (a == 0) {
          document.getElementById("previously-selected").style.display = "block";
          return a = 2;
        }
        else if (a == 1) {
          document.getElementById("order-history").style.display = "none";
          document.getElementById("previously-selected").style.display = "block";
          return a = 2;
        }
      }
      </script>