<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>


<style>
    .add-form-svk{
        max-width:80vw;
        padding-left: 5vw;
    }
</style>


<form class="add-form-svk" action=<%="/admin/product/updateproduct/" + product.PRODUCTID %> method="post">
  
    
    <div class="form-group">
        
      <label class="form-label" for="disabledInput">Product Type </label>
      <input class="form-control" name="TYPE" id="TYPE" type="text" value="MOTHERBOARD" placeholder="MOTHERBOARD" readonly >

    </div>
    
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Product Name</label>
      <input type="text" class="form-control" name="PRODUCT_NAME" id="PRODUCT_NAME" aria-describedby="emailHelp" placeholder="<%= product.PRODUCT_NAME %>">
    </div>
    
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Brand ID</label>
      <input type="text" class="form-control" name="BRANDID" id="BRANDID" aria-describedby="emailHelp" placeholder="<%= product.BRANDID %>">
    </div>
    
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Price</label>
      <input type="text" class="form-control" name="PRICE" id="PRICE" aria-describedby="emailHelp" placeholder="<%= product.PRICE %>">
    </div>
    
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Image</label>
      <input type="text" class="form-control" name="IMAGE" id="IMAGE" aria-describedby="emailHelp" placeholder="<%= product.IMAGE %>">
    </div>
    
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Warranty</label>
      <input type="text" class="form-control" name="WARRANTY" id="WARRANTY" aria-describedby="emailHelp" placeholder="<%= product.WARRANTY %>">
    </div>
    
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Stock</label>
      <input type="text" class="form-control" name="STOCK" id="STOCK" aria-describedby="emailHelp" placeholder="<%= product.STOCK %>">
    </div>
    
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Details</label>
      <input type="text" class="form-control" name="DETAILS" id="DETAILS" aria-describedby="emailHelp" placeholder="<%= product.DETAILS %>">
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">SCREEN_SIZE</label>
        <input type="text" class="form-control" name="SCREEN_SIZE" id="SCREEN_SIZE" aria-describedby="emailHelp" placeholder="<%= product.SCREEN_SIZE %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">REFRESH_RATE</label>
        <input type="text" class="form-control" name="REFRESH_RATE" id="REFRESH_RATE" aria-describedby="emailHelp" placeholder="<%= product.REFRESH_RATE %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">DISPLAY_TYPE</label>
        <input type="text" class="form-control" name="DISPLAY_TYPE" id="DISPLAY_TYPE" aria-describedby="emailHelp" placeholder="<%= product.DISPLAY_TYPE %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">RESOLUTION</label>
        <input type="text" class="form-control" name="RESOLUTION" id="RESOLUTION" aria-describedby="emailHelp" placeholder="<%= product.RESOLUTION %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">BRIGHTNESS</label>
        <input type="text" class="form-control" name="BRIGHTNESS" id="BRIGHTNESS" aria-describedby="emailHelp" placeholder="<%= product.BRIGHTNESS %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">CONTRAST_RATIO</label>
        <input type="text" class="form-control" name="CONTRAST_RATIO" id="CONTRAST_RATIO" aria-describedby="emailHelp" placeholder="<%= product.CONTRAST_RATIO %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">ASPECT_RATIO</label>
        <input type="text" class="form-control" name="ASPECT_RATIO" id="ASPECT_RATIO" aria-describedby="emailHelp" placeholder="<%= product.ASPECT_RATIO %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">COLOR</label>
        <input type="text" class="form-control" name="COLOR" id="COLOR" aria-describedby="emailHelp" placeholder="<%= product.COLOR %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">I_O_PORTS</label>
        <input type="text" class="form-control" name="I_O_PORTS" id="I_O_PORTS" aria-describedby="emailHelp" placeholder="<%= product.I_O_PORTS %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">RESPONSE_TIME</label>
        <input type="text" class="form-control" name="RESPONSE_TIME" id="RESPONSE_TIME" aria-describedby="emailHelp" placeholder="<%= product.RESPONSE_TIME %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">VIEWING_ANGLE</label>
        <input type="text" class="form-control" name="VIEWING_ANGLE" id="VIEWING_ANGLE" aria-describedby="emailHelp" placeholder="<%= product.VIEWING_ANGLE %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">AUDIO_FEATURES</label>
        <input type="text" class="form-control" name="AUDIO_FEATURES" id="AUDIO_FEATURES" aria-describedby="emailHelp" placeholder="<%= product.AUDIO_FEATURES %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">VIDEO_FEATURES</label>
        <input type="text" class="form-control" name="VIDEO_FEATURES" id="VIDEO_FEATURES" aria-describedby="emailHelp" placeholder="<%= product.VIDEO_FEATURES %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">POWER</label>
        <input type="text" class="form-control" name="POWER" id="POWER" aria-describedby="emailHelp" placeholder="<%= product.POWER %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">WEIGHT</label>
        <input type="text" class="form-control" name="WEIGHT" id="WEIGHT" aria-describedby="emailHelp" placeholder="<%= product.WEIGHT %>">
        </div>
        <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">DIMENSIONS</label>
        <input type="text" class="form-control" name="DIMENSIONS" id="DIMENSIONS" aria-describedby="emailHelp" placeholder="<%= product.DIMENSIONS %>">
        </div>
        

    <br>
    <input type="submit" class="btn btn-primary" value="UPDATE PRODUCT">
</form>