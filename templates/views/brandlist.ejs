<style>
    .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    max-width: 80vw;
    height: 20vh;
    margin-bottom: 2vh;
    margin-left: 9vw;
    text-align: left;
    font-family: arial;
    font-size: 1.5rem;
    overflow: hidden;
    border-radius: 2vw;
    }
    
    .img {
    float: left;
    max-width: 20vw;
    max-height: 20vh;
    }
    
    .txt {
    float: left;
    max-width: 60vw;
    max-height: 20vh;
    padding-left: 2vw;
    padding-top: 7vh;
    font-size: 1rem;
    }
    .bttn{
     float:right;
     margin-top:14vh;
     margin-right: 1vw;
     width: 13vw;
     height: 5vh;
     border: none;
     background: linear-gradient(to bottom right, #B8D7FF, #8EB7EB);
     border-radius: 2vw;
     cursor: pointer;
     font-size: 0.8rem;
     font-family: �Open Sans�;
    }
    .bttn:hover {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    }
    .add-btn{
     text-align: center;
     margin-bottom: 2vh;
     margin-left: 9vw;
     width: 80vw;
     height: 24vh;
     border: none;
     border-radius: 2vw;
     cursor: pointer;
     font-family: �Open Sans�;
    }
    .plus{font-size:6rem;}
    .add-btn:hover {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    }
    
    .add-btn:active {
      background: linear-gradient(to bottom right, #B8D7FF, #8EB7EB);
    }
    </style>
    
    <body>
        <a href="/admin/brand/newBrand"><div><button class="add-btn"><div class="plus">+</div> ADD BRAND</button></div></a>
        <% for (let brand of brands){ %>
        <a href=<%="/admin/brand/brandinfo/" + brand.BRANDID %>><div class="card">
            <img class="img" src="<%= brand.LOGO %>">
            <div class="txt"><%= brand.BRANDNAME %><br><%= brand.COUNTRY %></div>
            <a href=<%="/admin/brand/updateBrand/" + brand.BRANDID %>><button class="bttn">UPDATE</button></a>
        </div></a>
    <% } %>
    </body>