<!DOCTYPE html>
<html>

<head>
    <title>My Product list</title>
    <link rel="icon" href="/img/icons/mal-logo-head.png">
    <style>
     .card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 550px;
  height: 200px;
  margin: auto;
  text-align: center;
  font-family: arial;
  overflow:hidden;
}

.price {
  color: grey;
  font-size: 22px;
}

.cartbutton {
  
  border: none;
  outline: 0;
  padding: 8px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 14px;
  position:relative;
}

.cartbutton:hover {
  opacity: 0.7;
}

.column {
  float: left;
  width: 30%;
  padding: 20px;
}

/* Remove extra left and right margins, due to padding in columns */
.row {margin: 0 -5px;

}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}
    </style>

</head>

<body>
    <div>
        <%- include('../partials/header.ejs') %>
        
            <section id="homepage-top-products" style="margin-bottom: 15%;">
                <div style="float: left; width : 50%">
                    <h3> <a class="home" href="/productlist/new">Newly Released Product</a> </h3>
                    <div class="row">
                    <% for (let product of newlyReleased){ %>
                        
        <div class="column">
            <a class="listed" href=<%="/product/" + product.PRODUCTID %> >

            <div class="card">

                <img height="100" width="100" src=<%= product.IMAGE %> >
            <p><%= product.PRODUCT_NAME %></p>
                
        
    </div>
</a>
<p><button class="cartbutton">Add to Cart</button></p>
</div>
                        <% } %>
                </div>
                </div>
                <div style="float: right; width : 50%">
                    <h3><a class="home" href="/productlist/top">Top Products</a></h3>
                    <div class="row">
                    <% for (let product of topProducts){ %>
        <div class="column">
            <a class="listed" href=<%="/product/" + product.PRODUCTID %> >

                <div class="card">
    
                    <img height="100" width="100" src=<%= product.IMAGE %> >
                <p><%= product.PRODUCT_NAME %></p>
                    
            
        </div>
    </a>
    <p><button class="cartbutton">Add to Cart</button></p>
</div>
                        <% } %>
                </div>
                </div>

            </section>
        </div>
    
    <%- include('../partials/footer.ejs') %>
</body>

</html>